<section id="character-tags-edit-view" class="bb-page--transparent">

  <% render partial: "shared/capture_navbar" %>

  <div class="bb-container-md">
    <div class="bb-card bb-card--panel-lg">
      <div class="mb-8">
        <h1 class="bb-heading-xl">Edit Tag</h1>
        <p class="bb-subtitle text-lg">Edit the tag "<span class="font-semibold text-gray-800"><%= @character_tag.name %></span>" for <%= @character.name %></p>
      </div>

      <%= form_with model: [@character, @character_tag], url: character_tag_path(@character_tag), method: :patch, class: "space-y-8" do |form| %>
        <% if @character_tag.errors.any? %>
          <div class="bb-alert bb-alert-error">
            <h4 class="font-bold text-lg mb-3">Please fix the following errors:</h4>
            <ul class="list-disc list-inside space-y-1">
              <% @character_tag.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-3">
          <%= form.label :name, "Tag Name", class: "bb-label-lg" %>
          <%= form.text_field :name, placeholder: "Enter tag name...", class: "bb-input-lg" %>
          <p class="bb-subtitle-sm">Tags will be automatically converted to lowercase</p>
        </div>

        <div class="flex gap-4 pt-4">
          <%= form.submit "Update Tag", class: "bb-btn bb-btn-primary shadow-sm hover:shadow-md" %>
          <%= link_to "Cancel", character_path(@character), class: "bb-btn bb-btn-secondary shadow-sm hover:shadow-md" %>
        </div>
      <% end %>
    </div>
  </div>

</section>
