<section id="character-tags-show-view" class="bb-page--transparent">

  <% render partial: "shared/capture_navbar" %>

  <div class="bb-container">
    <div class="bb-card bb-card--panel-lg">

      <!-- Header section -->
      <div class="mb-8">
        <h1 class="bb-heading-xl">Tag: <%= @character_tag.name %></h1>
      </div>

      <% if @images.empty? %>
        <div class="bb-empty-state-lg">
          <div class="mb-6">
            <p class="bb-subtitle text-lg mb-4">No images found with characters tagged as "<%= @character_tag.name %>".</p>
            <p class="text-gray-400 text-sm">
              Characters with this tag:
              <% if @characters_with_tag.any? %>
                <span class="font-medium text-gray-600"><%= @characters_with_tag.pluck(:name).join(", ") %></span>
              <% else %>
                <span class="italic">None</span>
              <% end %>
            </p>
          </div>
        </div>
      <% else %>
        <div class="mb-8">
          <%= render partial: "shared/image_list", locals: {
            images: @images,
            universe: @universe
          } %>
        </div>
      <% end %>

      <div class="mt-16 pt-6 text-center">
        <%= link_to "â† Back to #{@universe.name}", universe_path(@universe), class: "bb-btn bb-btn-secondary shadow-sm hover:shadow-md" %>
      </div>
    </div>
  </div>

</section>
