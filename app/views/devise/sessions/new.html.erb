<section class="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="small-12 cell">
          <h2>Login</h2>
        </div>

        <div class="large-6 medium-8 large-offset-3 medium-offset-2 cell">
          <%= form.label :email, for: "newUserSessionEmail" %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", id: "newUserSessionEmail", class: 'form-control' %>
        </div>

        <div class="large-6 medium-8 large-offset-3 medium-offset-2 cell">
          <%= form.label :password, for: "newUserSessionPassword" %>
          <%= form.password_field :password, autocomplete: "current-password", id: "newUserSessionPassword", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="large-6 medium-8 large-offset-3 medium-offset-2 cell">
            <%= form.check_box :remember_me, id: "rememberCheckBox" %><label for="rememberCheckBox">Remember Me</label>
          </div>
        <% end %>

        <div class="large-6 medium-8 large-offset-3 medium-offset-2 cell">
          <%= form.submit "Sign In", id: "newUserSessionSubmit", class: "button" %>
        </div>

      </div>
    </div>
  <% end %>

  <%= render "devise/shared/error_messages", resource: resource %>
</section>
