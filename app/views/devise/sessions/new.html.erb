<section id="bb_login" class="py-8 min-h-screen bg-gray-50">
  <div class="max-w-md mx-auto px-4">
    <div class="flex justify-center">
      <div class="w-full">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome Back</h1>
          <p class="text-gray-600">Sign in to your account</p>
        </div>

        <%= form_for(resource, as: resource_name, html: {class: "bg-white rounded-lg px-8 pt-6 pb-8 shadow-lg"}, url: session_path(resource_name)) do |form| %>

        <div class="mb-4">
          <%= form.label :email, for: "newUserSessionEmail", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <%= fa_icon "envelope", class: "text-gray-400" %>
            </span>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", id: "newUserSessionEmail", class: 'w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500', placeholder: "your_email@gmail.com", required: true %>
          </div>
        </div>

        <div class="mb-4">
          <%= form.label :password, for: "newUserSessionPassword", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <%= fa_icon "lock", class: "text-gray-400" %>
            </span>
            <%= form.password_field :password, autocomplete: "current-password", id: "newUserSessionPassword", class: 'w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500', placeholder: "*****", required: true  %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-4">
            <label for="rememberCheckBox" class="flex items-center">
              <%= form.check_box :remember_me, id: "rememberCheckBox", class: "mr-2" %>
              <span class="text-sm text-gray-700">Keep me logged in</span>
            </label>
          </div>
        <% end %>

        <div class="flex items-center justify-between">
          <%= form.submit "Sign In", id: "newUserSessionSubmit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg focus:outline-none w-full transition-colors duration-200" %>
        </div>

      <% end %>

      </div>

    </div>

  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
</section>
