<section id="bb_passwords_new" class="bb-page">
  <div class="bb-container-xs">
    <div class="flex justify-center">
      <div class="w-full">

        <!-- Page Header -->
        <div class="bb-page-header">
          <h1 class="bb-heading-xl">Forgot your password?</h1>
          <p class="bb-subtitle">We'll email you reset instructions.</p>
        </div>

        <!-- Reset Password Form -->
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bb-card bb-card--form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Email Field -->
          <div class="bb-field-lg">
            <%= f.label :email, class: "bb-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bb-input" %>
          </div>

          <!-- Submit Button -->
          <div class="flex items-center justify-between">
            <%= f.submit "Send reset instructions", class: "bb-btn bb-btn-primary bb-btn--full" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</section>
