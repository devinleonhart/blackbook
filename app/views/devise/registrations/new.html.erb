<section id="bb_register" class="bb-page">
  <div class="bb-container-md">
    <div class="flex justify-center">
      <div class="w-full">
        <div class="text-center mb-8">
          <h1 class="bb-heading-xl">Create Account</h1>
          <p class="bb-subtitle">Join Blackbook to start creating</p>
        </div>

        <%= form_for(resource, as: resource_name, html: {class: "bb-card bb-card--form"}, url: registration_path(resource_name)) do |form| %>

       <div class="mb-4">
          <%= form.label :email, for: "newUserRegisterEmail", class: "bb-label" %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-400">âœ‰ï¸</span>
            </span>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", id: "newUserRegisterEmail", class: "bb-input pl-10 pr-3", placeholder: "your_email@gmail.com", required: true %>
          </div>
        </div>

        <div class="mb-4">
          <%= form.label :display_name, for: "newUserRegisterDisplayname", class: "bb-label" %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-400">ğŸ‘¤</span>
            </span>
            <%= form.text_field :display_name, autocomplete: "display name", id: "newUserRegisterDisplayname", class: "bb-input pl-10 pr-3", placeholder: "CoolUser69", required: true %>
          </div>
        </div>

        <div class="mb-4">
          <%= form.label :password, for: "newUserRegisterPassword", class: "bb-label" %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-400">ğŸ”’</span>
            </span>
            <%= form.password_field :password, id: "newUserRegisterPassword", class: "bb-input pl-10 pr-3", required: true  %>
          </div>
        </div>

        <div class="mb-6">
          <%= form.label :password_confirmation, for: "newUserRegisterPasswordconfirmation", class: "bb-label" %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-400">ğŸ”’</span>
            </span>
            <%= form.password_field :password_confirmation, id: "newUserRegisterPasswordconfirmation", class: "bb-input pl-10 pr-3", required: true  %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <%= form.submit "Create Account", id: "newUserRegisterSubmit", class: "bb-btn bb-btn-primary bb-btn--full" %>
        </div>

      <% end %>

      </div>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
</section>
