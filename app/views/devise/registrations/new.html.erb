


<section id="bb_register" class="section is-fullheight">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4-tablet is-5-desktop">

      <%= form_for(resource, as: resource_name, html: {class: "box"}, url: registration_path(resource_name)) do |form| %>

       <div class="field">
          <%= form.label :email, for: "newUserRegisterEmail", class: "label" %>
          <div class="control has-icons-left">
            <span class="icon is-small is-left">
              <%= fa_icon "envelope" %>
            </span>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", id: "newUserRegisterEmail", class: 'input', placeholder: "your_email@gmail.com", required: true %>
          </div>
        </div>

        <div class="field">
          <%= form.label :display_name, for: "newUserRegisterDisplayname", class: "label" %>
          <div class="control has-icons-left">
            <span class="icon is-small is-left">
              <%= fa_icon "user" %>
            </span>
            <%= form.text_field :display_name, autocomplete: "display name", id: "newUserRegisterDisplayname", class: 'input', placeholder: "CoolUser69", required: true %>
          </div>
        </div>

        <div class="field">
          <%= form.label :password, for: "newUserRegisterPassword", class: "label" %>
          <div class="control has-icons-left">
            <span class="icon is-small is-left">
              <%= fa_icon "lock" %>
            </span>
            <%= form.password_field :password, id: "newUserRegisterPassword", class: 'input', required: true  %>
          </div>
        </div>

        <div class="field">
          <%= form.label :password_confirmation, for: "newUserRegisterPasswordconfirmation", class: "label" %>
          <div class="control has-icons-left">
            <span class="icon is-small is-left">
              <%= fa_icon "lock" %>
            </span>
            <%= form.password_field :password_confirmation, id: "newUserRegisterPasswordconfirmation", class: 'input', required: true  %>
          </div>
        </div>

        <div class="field">
          <%= form.submit "Sign Up", id: "newUserRegisterSubmit", class: "button is-info" %>
        </div>

      <% end %>

      </div>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
</section>
