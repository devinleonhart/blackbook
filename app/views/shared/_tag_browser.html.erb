<div>
  <div class="flex items-center justify-between mb-4">
    <h3 class="bb-subheading mb-0">Character Tags</h3>
  </div>

  <% if @character_tags.any? %>
    <div class="space-y-2">
      <% @character_tags.each do |tag_name, count| %>
        <div class="group relative">
          <%= link_to character_tag_path(@tag_name_to_id[tag_name]), class: "bb-tag-btn" do %>
            <span class="truncate flex-1"><%= tag_name %></span>
            <span class="ml-2 bb-badge bb-badge-blue">
              <%= count %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bb-empty-state text-gray-500">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
      <p class="text-sm">No character tags yet</p>
      <p class="text-xs mt-1">Tags will appear here when characters are tagged</p>
    </div>
  <% end %>
</div>
