<section
  class="image-list"
  data-controller="image-list"
  data-action="turbo:load@window->image-list#refresh turbo:render@window->image-list#refresh pageshow@window->image-list#refresh"
>

  <% if images.empty? %>
    <%= render partial: "shared/empty_banner", locals: {
      message: (defined?(empty_message) && empty_message.present?) ? empty_message : "There are no images yet, add some!"
    } %>
  <% else %>
    <!-- Pagination at top -->
    <%= render partial: "shared/pagination", locals: { collection: images } %>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-items-center">
      <% images.each do |image| %>
        <%= link_to edit_universe_image_url(universe, image), class: "block p-1 transition-all duration-200" do %>
          <%= generate_image_tag(image, [250, 400]) %>
        <% end %>
      <% end %>
    </div>

    <!-- Pagination at bottom -->
    <%= render partial: "shared/pagination", locals: { collection: images } %>
  <% end %>

</section>
