<nav id="bb_navbar" class="bg-gray-800 text-white" role="navigation" aria-label="main navigation" data-controller="navbar">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">

      <!-- Logo and Breadcrumbs -->
      <div class="flex items-center">
        <a class="text-xl font-bold text-white hover:text-gray-300 px-3 py-2" href="/">
          Blackbook
        </a>
        <div class="ml-4 flex items-center">
          <%
            # Determine which universe to show (prioritized order)
            current_universe = nil
            if @universe
              current_universe = @universe
            elsif @image && @image.universe
              current_universe = @image.universe
            elsif @new_character && @new_character.universe
              current_universe = @new_character.universe
            end
          %>

          <% unless current_universe.nil? %>
            <span class="text-gray-400 mx-2">|</span>
            <%= link_to "#{current_universe.name}", universe_url(current_universe), class: "bb-nav-link" %>

            <% unless @character_tag.nil? %>
              <span class="text-gray-400 mx-2">|</span>
              <span class="text-gray-300 px-3 py-2 text-sm font-medium">"<%= @character_tag.name %>"</span>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-200 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
        aria-controls="bb_navbar_mobile"
        aria-expanded="false"
        data-navbar-target="button"
        data-action="navbar#toggle"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <div class="flex space-x-4">
            <!-- Context-specific Links -->
            <% unless @universe.nil? %>
              <% unless @character_tag %>
                <%= link_to "New Character", new_universe_character_url(@universe), class: "bb-nav-link" %>
                <%= link_to "Edit Universe", edit_universe_url(@universe), class: "bb-nav-link" %>
              <% end %>
            <% end %>
            <% unless @character.nil? %>
              <% unless @character_tag %>
                <%= link_to "Edit Character", edit_character_url(@character), class: "bb-nav-link" %>
              <% end %>
            <% end %>

            <!-- Admin Link -->
            <% if admin? %>
              <%= link_to "Admin", admin_root_path, class: "bb-nav-link" %>
            <% end %>

            <!-- User Links -->
            <% if user_signed_in? %>
              <%= link_to "Random", random_image_path, data: { turbo: false }, class: "bb-nav-link" %>
              <%= link_to "Slideshow", slideshow_path, class: "bb-nav-link" %>
              <%= link_to "Favorites", favorites_path, class: "bb-nav-link" %>
              <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "bb-nav-link" %>
            <% else %>
              <%= link_to "Register", new_user_registration_path, class: "bb-nav-link" %>
              <%= link_to "Sign in", new_user_session_path, class: "bb-nav-link" %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div id="bb_navbar_mobile" class="md:hidden hidden border-t border-gray-700" data-navbar-target="menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <!-- Context-specific Links -->
      <% unless @universe.nil? %>
        <% unless @character_tag %>
          <%= link_to "New Character", new_universe_character_url(@universe), class: "bb-nav-link block w-full" %>
          <%= link_to "Edit Universe", edit_universe_url(@universe), class: "bb-nav-link block w-full" %>
        <% end %>
      <% end %>
      <% unless @character.nil? %>
        <% unless @character_tag %>
          <%= link_to "Edit Character", edit_character_url(@character), class: "bb-nav-link block w-full" %>
        <% end %>
      <% end %>

      <!-- Admin Link -->
      <% if admin? %>
        <%= link_to "Admin", admin_root_path, class: "bb-nav-link block w-full" %>
      <% end %>

      <!-- User Links -->
      <% if user_signed_in? %>
        <%= link_to "Random", random_image_path, data: { turbo: false }, class: "bb-nav-link block w-full" %>
        <%= link_to "Slideshow", slideshow_path, class: "bb-nav-link block w-full" %>
        <%= link_to "Favorites", favorites_path, class: "bb-nav-link block w-full" %>
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "bb-nav-link block w-full" %>
      <% else %>
        <%= link_to "Register", new_user_registration_path, class: "bb-nav-link block w-full" %>
        <%= link_to "Sign in", new_user_session_path, class: "bb-nav-link block w-full" %>
      <% end %>
    </div>
  </div>

</nav>
