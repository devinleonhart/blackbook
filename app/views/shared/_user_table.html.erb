<% if users.empty? %>
  <!-- Empty State -->
  <div class="bb-empty-state">
    <div class="bb-avatar-lg bb-avatar-gray mx-auto mb-4">
      <span class="text-2xl">ğŸ‘¥</span>
    </div>
    <h3 class="bb-empty-state__title">No users found</h3>
    <p class="bb-empty-state__text">There are currently no users in the system</p>
  </div>
<% else %>
  <!-- User List -->
  <div class="space-y-3">
    <h3 class="bb-subheading-sm">System Users</h3>
    <% users.each do | user | %>
      <!-- User Row -->
      <div class="bb-list-item">
        <div class="flex items-center">
          <div class="bb-avatar bb-avatar-blue mr-4">
            <span>ğŸ‘¤</span>
          </div>
          <div class="flex flex-col">
            <span class="text-gray-900 font-medium"><%= user.display_name %></span>
            <span class="bb-subtitle-sm"><%= user.email %></span>
          </div>
        </div>
        <div class="flex items-center space-x-2">
          <span class="bb-badge bb-badge-gray">
            <%= Character.joins(:universe).where(universe: { owner_id: user.id }).count %> characters
          </span>
          <%= link_to user_path(user.id), method: "delete", data: { turbo_confirm: 'Are you sure you want to delete this user?' }, class: "bb-action-text p-2 hover:bg-red-50 rounded-full" do %>
            <span>ğŸ—‘ï¸</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
