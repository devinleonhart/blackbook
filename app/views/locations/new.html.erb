<div class="row">
  <div class="col-md-6 mx-auto">
    <h1>New Location</h1>

    <%= form_with model: @new_location, url: universe_locations_url(universe_id: @new_location.universe_id), html: { class: "bbform border border-dark border-2 rounded" } do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :content, class: "form-label" %>
        <%= form.rich_text_area :content %>
      </div>
      <%= form.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Cancel", universe_url(@new_location.universe_id), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
