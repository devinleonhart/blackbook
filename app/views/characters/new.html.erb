<section id="characters-new-view" class="bb-page">

    <div class="bb-container-xs">
      <div class="flex justify-center">
        <div class="w-full">
          <div class="bb-page-header">
            <h1 class="bb-heading-xl">Create New Character</h1>
            <p class="bb-subtitle">Add a new character to your universe</p>
          </div>

          <%= form_with model: @new_character, url: universe_characters_url(universe_id: @new_character.universe_id), html: {class: "bb-card bb-card--form"} do |form| %>

            <div class="bb-field-lg">
              <%= form.label :name, class: "bb-label" %>
              <div class="bb-input-icon-wrapper">
                <span class="bb-input-icon">ğŸ‘¤</span>
                <%= form.text_field :name, class: 'bb-input-lg pl-10 pr-3', placeholder: "Enter character name", required: true %>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-3">
              <%= form.submit "Create Character", class: "bb-btn bb-btn-primary bb-btn--flex" %>
              <%= link_to "Cancel", universe_url(@new_character.universe_id), class: "bb-btn bb-btn-secondary bb-btn--flex text-center" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

</section>
