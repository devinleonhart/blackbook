<section class="character-image-list">

  <div class="row">
    <% @images.each do | image | %>
      <div class="col-md-2">
        <%= link_to edit_universe_image_url(@character.universe, image) do %>
          <%= generate_image_tag(image, [250, nil]) %>
        <% end %>
        <span class="image-caption"><%= image.caption %></span>
      </div>
    <% end %>
    <%= will_paginate @images %>
  </div>

</section>
