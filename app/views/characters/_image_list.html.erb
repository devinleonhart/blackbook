<div class="character-image-component container" data-controller="character-image">
  <div class="row">
    <% @images.reverse.each do | image | %>
      <div class="col-md-2">
        <%= link_to edit_universe_image_url(@character.universe, image) do %>
          <%= image_tag(image.image_file.variant(resize_to_limit: [250, nil]), class: "img-thumbnail") %>
        <% end %>
      </div>
    <% end %>
    <%= will_paginate @images %>
  </div>
</div>
