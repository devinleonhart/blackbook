<section id="admin-dashboard-view" class="py-8 min-h-screen bg-gray-50">
  <div class="max-w-5xl mx-auto px-4">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin</h1>
      <p class="text-gray-600">Administrative tools for managing the system.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- User management -->
      <div class="bg-white rounded-lg p-6 shadow-lg border border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">User management</h2>
        <p class="text-sm text-gray-600 mb-4">View and manage users, permissions, and ownership.</p>
        <%= link_to "Open user management →", users_path, class: "inline-flex items-center text-blue-700 hover:text-blue-900 hover:underline font-medium" %>
      </div>

      <!-- Dedupe -->
      <div class="bg-white rounded-lg p-6 shadow-lg border border-gray-100">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Dedupe</h2>
        <p class="text-sm text-gray-600 mb-4">Find duplicate image uploads and remove extras.</p>
        <%= link_to "Find duplicate images →", admin_dedupe_images_path, class: "inline-flex items-center text-blue-700 hover:text-blue-900 hover:underline font-medium" %>
      </div>
    </div>

    <!-- Placeholder for future admin tools -->
    <div class="mt-8 bg-white rounded-lg p-6 shadow-lg border border-gray-100">
      <h2 class="text-xl font-semibold text-gray-900 mb-2">More tools (coming soon)</h2>
      <p class="text-sm text-gray-600 mb-4">
        Placeholder area for future admin features (e.g., audit log, system health, bulk operations).
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
        <div class="p-4 rounded-lg border border-dashed border-gray-300 bg-gray-50">
          <div class="text-sm font-semibold text-gray-700">Audit log</div>
          <div class="text-xs text-gray-500 mt-1">Who did what, when.</div>
        </div>
        <div class="p-4 rounded-lg border border-dashed border-gray-300 bg-gray-50">
          <div class="text-sm font-semibold text-gray-700">System health</div>
          <div class="text-xs text-gray-500 mt-1">Storage, queues, errors.</div>
        </div>
        <div class="p-4 rounded-lg border border-dashed border-gray-300 bg-gray-50">
          <div class="text-sm font-semibold text-gray-700">Bulk actions</div>
          <div class="text-xs text-gray-500 mt-1">Batch cleanup & maintenance.</div>
        </div>
      </div>
    </div>
  </div>
</section>
