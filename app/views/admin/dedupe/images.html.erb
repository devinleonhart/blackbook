<section id="admin-dedupe-images-view" class="py-8 min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-start justify-between gap-4 mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Duplicate images</h1>
      </div>
      <div class="shrink-0">
        <%= link_to "← Back to Admin", admin_root_path, class: "text-blue-700 hover:text-blue-900 hover:underline font-medium" %>
      </div>
    </div>

    <% if @universes_with_duplicate_images.blank? %>
      <div class="bg-white rounded-lg p-6 shadow-lg border border-gray-100">
        <%= render partial: "shared/empty_banner", locals: { message: "No duplicate image uploads found." } %>
      </div>
    <% else %>
      <div class="space-y-8">
        <% @universes_with_duplicate_images.each do |entry| %>
          <% universe = entry[:universe] %>
          <% groups = entry[:groups] %>

          <div class="bg-white rounded-lg p-6 shadow-lg border border-gray-100">
            <div class="flex items-start justify-between gap-4 mb-6">
              <div>
                <h2 class="text-2xl font-bold text-gray-900">
                  <%= link_to universe.name, universe_path(universe), class: "hover:underline" %>
                </h2>
                <p class="text-sm text-gray-600">
                  <%= pluralize(groups.size, "duplicate group") %> found in this universe.
                </p>
              </div>
            </div>

            <div class="space-y-6">
              <% groups.each do |group| %>
                <div class="rounded-lg border border-gray-200 p-4">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-4">
                    <div>
                      <div class="text-lg font-semibold text-gray-900">
                        <%= pluralize(group[:count], "image") %> with identical file data
                      </div>
                      <div class="text-xs text-gray-500">
                        <span class="font-mono">checksum=<%= group[:checksum] %></span>
                        <span class="mx-2">•</span>
                        <span><%= number_to_human_size(group[:byte_size]) %></span>
                        <span class="mx-2">•</span>
                        <span><%= group[:content_type] %></span>
                      </div>
                    </div>

                    <div class="shrink-0">
                      <%= form_with url: admin_dedupe_images_dedupe_group_path, method: :post, local: true do %>
                        <%= hidden_field_tag :universe_id, universe.id %>
                        <%= hidden_field_tag :checksum, group[:checksum] %>
                        <%= hidden_field_tag :byte_size, group[:byte_size] %>
                        <%= hidden_field_tag :content_type, group[:content_type] %>
                        <%= submit_tag "Delete #{group[:count] - 1} Duplicate(s)", data: { turbo_confirm: "Keep the earliest image in this group and delete #{group[:count] - 1} duplicates? This cannot be undone." }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition-colors duration-200 cursor-pointer" %>
                      <% end %>
                    </div>
                  </div>

                  <div class="overflow-x-auto">
                    <table class="min-w-full text-sm">
                      <thead>
                        <tr class="text-left text-gray-600 border-b">
                          <th class="py-2 pr-3">Image</th>
                          <th class="py-2 pr-3">Created</th>
                          <th class="py-2 pr-3">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% group[:images].each_with_index do |image, idx| %>
                          <tr class="border-b last:border-b-0">
                            <td class="py-3 pr-3">
                              <%= link_to "Image ##{image.id}", edit_universe_image_path(universe, image), class: "text-blue-700 hover:text-blue-900 hover:underline" %>
                              <% if idx == 0 %>
                                <span class="ml-2 text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">keep</span>
                              <% else %>
                                <span class="ml-2 text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded-full">duplicate</span>
                              <% end %>
                            </td>
                            <td class="py-3 pr-3 text-gray-500">
                              <%= image.created_at.strftime("%Y-%m-%d %H:%M") %>
                            </td>
                            <td class="py-3 pr-3 text-gray-500">
                              <% if idx == 0 %>
                                keep
                              <% else %>
                                delete
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
