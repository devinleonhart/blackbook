<section class="section">
  <div class="container">
    <h1 class="title">Missing Local Images</h1>

    <nav class="breadcrumb">
      <ul>
        <li><%= link_to "Migration Status", admin_image_migration_index_path %></li>
        <li class="is-active"><a>Missing Images</a></li>
      </ul>
    </nav>

    <% if @missing_images.any? %>
      <div class="notification is-warning">
        <strong><%= @missing_images.count %></strong> images are missing from local storage.
        Run <code>rails images:migrate_to_local</code> to download them.
      </div>

      <table class="table is-fullwidth is-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Filename</th>
            <th>Universe</th>
            <th>Size</th>
            <th>Cloud Available</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @missing_images.each do |item| %>
            <% image = item[:image] %>
            <% status = item[:status] %>
            <tr>
              <td><%= image.id %></td>
              <td>
                <% if image.image_file.attached? %>
                  <%= image.image_file.blob.filename %>
                <% else %>
                  <em>No file attached</em>
                <% end %>
              </td>
              <td><%= image.universe.name %></td>
              <td>
                <% if image.image_file.attached? %>
                  <%= number_to_human_size(image.image_file.blob.byte_size) %>
                <% else %>
                  â€”
                <% end %>
              </td>
              <td>
                <span class="tag <%= status[:cloud] ? 'is-success' : 'is-danger' %>">
                  <%= status[:cloud] ? 'Available' : 'Missing' %>
                </span>
              </td>
              <td><%= time_ago_in_words(image.created_at) %> ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="notification is-success">
        <span class="icon">
          <i class="fas fa-check"></i>
        </span>
        All images are available locally!
      </div>

      <p>
        <%= link_to "Back to Migration Status", admin_image_migration_index_path, class: "button is-primary" %>
      </p>
    <% end %>
  </div>
</section>
