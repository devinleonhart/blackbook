<section class="universes-new-view">
  <div class="max-w-lg mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">New Universe</h2>

    <%= form_with model: @new_universe, url: universes_url(@new_universe), method: "post", class: "bg-white rounded-lg p-6 shadow border border-gray-200" do |form| %>
      <div class="mb-4">
        <%= form.label :name, for: "newUniverseNameField", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, id: "newUniverseNameField", class: "bb-input" %>
      </div>

      <div class="flex items-center gap-2">
        <%= form.submit "Save", id: "newUniverseSaveButton", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Cancel", universes_url(), class: "bg-gray-100 hover:bg-gray-200 text-gray-900 font-bold py-2 px-4 rounded border border-gray-200" %>
      </div>
    <% end %>
  </div>
</section>
