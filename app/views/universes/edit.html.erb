<section id="universes-edit-view" class="bb-page">

  <div class="bb-container-lg">
    <div class="flex justify-center">
      <div class="w-full">

        <!-- Page Header -->
        <div class="bb-page-header">
          <h1 class="bb-heading-xl">Edit Universe</h1>
          <p class="bb-subtitle">Update your universe settings and collaborators</p>
        </div>

        <div class="bb-card-grid-2">

          <!-- Universe Settings Card -->
          <div class="bb-card bb-card--form">
            <h2 class="bb-section-heading">Universe Settings</h2>

            <%= form_with model: @universe, url: universe_url(@universe), method: "patch" do |form| %>
              <div class="bb-field-lg">
                <%= form.label :name, class: "bb-label" %>
                <div class="bb-input-icon-wrapper">
                  <span class="bb-input-icon">ðŸš€</span>
                  <%= form.text_field :name, class: "bb-input-lg pl-10 pr-3", placeholder: "Enter universe name", required: true %>
                </div>
              </div>

              <!-- Actions -->
              <div class="flex flex-col sm:flex-row gap-3">
                <%= form.submit "Save Changes", class: "bb-btn bb-btn-primary bb-btn--flex" %>
                <%= link_to "Cancel", universe_url(@universe), class: "bb-btn bb-btn-secondary bb-btn--flex text-center" %>
              </div>
            <% end %>
          </div>

          <!-- Collaborators Card -->
          <div class="bb-card bb-card--form">
            <h2 class="bb-section-heading">Collaborators</h2>

            <% if @universe.collaborators.empty? %>
              <!-- Empty State -->
              <div class="bb-empty-state">
                <div class="bb-avatar-lg bb-avatar-gray mx-auto mb-4">
                  <span class="text-2xl">ðŸ‘¥</span>
                </div>
                <h3 class="bb-empty-state__title">No collaborators yet</h3>
                <p class="bb-empty-state__text">Add collaborators to work together on this universe</p>
              </div>
            <% else %>
              <!-- Current Collaborators List -->
              <div class="space-y-3 mb-6">
                <h3 class="bb-subheading-sm">Current Collaborators</h3>
                <% @universe.collaborations.each do | collaboration | %>
                  <div class="bb-list-item--compact">
                    <div class="flex items-center">
                      <div class="bb-avatar-sm bb-avatar-blue mr-3">
                        <span class="text-sm">ðŸ‘¤</span>
                      </div>
                      <span class="text-gray-900 font-medium"><%= collaboration.user.display_name %></span>
                    </div>
                    <%= link_to collaboration_url(collaboration), method: "delete", class: "bb-action-text" do %>
                      <span>âœ•</span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>

            <!-- Add Collaborator Form -->
            <div class="border-t pt-6">
              <h3 class="bb-subheading-sm">Add New Collaborator</h3>
              <%= form_with model: Collaboration.new(), url: universe_collaborations_url(@universe), method: "post" do |form| %>
                <div class="bb-field">
                  <%= form.label :user_id, class: "bb-label" %>
                  <%= form.select :user_id, generate_collaborator_names(User.all, @universe.collaborators, @universe.owner), {include_blank: true}, class: "bb-input" %>
                </div>
                <%= form.submit "Add Collaborator", class: "bb-btn-sm bb-btn-success w-full" %>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

</section>
