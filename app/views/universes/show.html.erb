<section id="universes-show-view" class="section">

  <% render partial: "shared/capture_navbar" %>

  <div class="columns is-centered">
    <div class="column is-one-quarter has-text-centered">

      <%= form_with model: Image.new(universe_id: @universe.id), url: universe_images_url(@universe), method: "post" do | form | %>

        <%= form.submit "Upload Image", class: "button is-primary block" %>
        <%= form.file_field :image_file, required: true, class: "block has-text-centered" %>

      <% end %>

      <hr />

      <table class="table is-fullwidth is-striped">
        <% @universe.characters.sort_by {|c| c.name }.each do |character| %>
          <tr>
            <td>
              <%= link_to character.name, character_path(character) %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
    <div class="column is-three-quarters">
      <%= render partial: "shared/image_list", locals: {
        images: @images,
        universe: @universe
      } %>
    </div>
  </div>

</section>
