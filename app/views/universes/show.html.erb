<section class="universes-show-view">

  <header>
    <h1><%= @universe.name %></h1>
  </header>

  <% render partial: "shared/capture_navbar" %>

  <div class="grid-x grid-padding-x">
    <% @universe.characters.each do | character | %>
      <div class="medium-2 cell">

        <div class="card">
          <div class="card-section">
            <h5><%= link_to character.name, character_path(character) %></h5>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <%= render partial: "shared/image_form", locals: {
    universe: @universe
  } %>

  <%= render partial: "shared/image_list", locals: {
    images: @images,
    universe: @universe
  } %>

  <%= render partial: "shared/app_footer", locals: {
    owner: @universe.owner,
    collaborators: @universe.collaborators
  } %>

</section>
