<section class="universes-show-view">

  <header>
    <h1><%= @universe.name %></h1>
  </header>

  <% render partial: "shared/capture_navbar" %>

  <%= render partial: "universes/card_list", locals: {
    collection: @universe.characters,
    collection_url: ->(x) { character_url(x) },
    image_helper: ->(x) { get_character_avatar_image(x) },
    new_url: new_universe_character_url(@universe),
    name: "Characters",
    show_avatar: true
  } %>

  <%= render partial: "universes/card_list", locals: {
    collection: @universe.locations,
    collection_url: ->(x) { location_url(x) },
    image_helper: ->(x) { get_character_avatar_image(x) },
    new_url: new_universe_location_url(@universe),
    name: "Locations",
    show_avatar: false
  } %>

  <%= render partial: "universes/image_list", locals: {
    images: @images,
    universe: @universe
  } %>

  <%= render partial: "shared/app_footer", locals: {
    owner: @universe.owner,
    collaborators: @universe.collaborators
  } %>

</section>



