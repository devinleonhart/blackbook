<div class="card-list cards">
  <h2><%= name %></h2>
  <div class="row">
    <div class="col-md-12">
      <div class="row card-row">
        <% if collection.empty? %>
          <div class="col-md-10 mx-auto">
            <ul class="list-group list-group-flush rounded">
              <li class="list-group-item list-group-item-danger">There are no <%= name.downcase %> yet, create some!</li>
            </ul>
          </div>
        <% else %>
          <% collection.sort_by{ |e| e.name.downcase }.each do | item | %>
            <div class="col-md-3">
              <%= link_to render(:partial => "shared/card", locals: { name: item.name, avatar: image_helper.call(item.try(:images)) }), collection_url.call(item) %>
            </div>
          <% end %>
        <% end %>
        <div class="col-md-3">
          <%= link_to render(partial: "shared/new_button_card"), new_url %>
        </div>
      </div>
    </div>
  </div>
</div>
