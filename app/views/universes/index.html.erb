<section id="universes-index-view" class="py-8 min-h-screen bg-gray-50">

  <div class="max-w-4xl mx-auto px-4">
    <div class="flex justify-center">
      <div class="w-full">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Your Universes</h1>
          <p class="text-gray-600">Manage your creative worlds and characters</p>
        </div>

        <div class="bg-white rounded-lg px-8 pt-6 pb-8 shadow-lg">
          <% if @universes.empty? %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <%= fa_icon "rocket", class: "text-2xl text-gray-400" %>
              </div>
              <h3 class="text-lg font-semibold text-gray-600 mb-2">No universes yet</h3>
              <p class="text-gray-500">Create your first universe to get started</p>
            </div>
          <% else %>
            <div class="space-y-3">
              <h3 class="text-sm font-medium text-gray-700 mb-3">Your Universes</h3>
              <% @universes.each do | universe | %>
                <%= link_to universe_path(universe), class: "block" do %>
                  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                        <%= fa_icon "rocket", class: "text-blue-600" %>
                      </div>
                      <div class="flex flex-col">
                        <span class="text-gray-900 font-medium"><%= universe.name %></span>
                        <span class="text-sm text-gray-500"><%= pluralize(universe.characters.count, 'character') %></span>
                      </div>
                    </div>
                    <div class="flex items-center space-x-2">
                      <span class="text-xs text-gray-400 bg-gray-200 px-2 py-1 rounded-full">
                        <%= pluralize(universe.images.count, 'image') %>
                      </span>
                      <div class="text-blue-600 p-2 rounded-full">
                        <%= fa_icon "arrow-right" %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</section>
