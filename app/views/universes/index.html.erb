<section id="universes-index-view" class="py-8 min-h-screen bg-gray-50">

  <div class="max-w-4xl mx-auto px-4">
    <div class="flex justify-center">
      <div class="w-full">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Your Universes</h1>
        </div>

        <div class="bg-white rounded-lg px-8 pt-6 pb-8 shadow-lg">
          <% if @universes.empty? %>
            <div class="text-center py-8">
              <h3 class="text-lg font-semibold text-gray-600 mb-2">No universes yet</h3>
              <p class="text-gray-500">Create your first universe to get started</p>
            </div>
          <% else %>
            <div class="space-y-3">
              <% @universes.each do | universe | %>
                <%= link_to universe_path(universe), class: "block" do %>
                  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                    <div class="flex items-center">
                      <div class="flex flex-col">
                        <span class="text-gray-900 font-medium"><%= universe.name %></span>
                        <span class="text-sm text-gray-500">
                          <%= pluralize(universe.characters.count, 'character') %> â€¢ <%= pluralize(universe.images.count, 'image') %>
                        </span>
                      </div>
                    </div>
                    <div class="flex items-center">
                      <div class="text-blue-600 p-2 rounded-full">
                        <span>â†’</span>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</section>
