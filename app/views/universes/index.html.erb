<section id="universes-index-view" class="bb-page">

  <div class="bb-container-md">
    <div class="flex justify-center">
      <div class="w-full">

        <!-- Page Header -->
        <div class="bb-page-header">
          <h1 class="bb-heading-xl">Your Universes</h1>
        </div>

        <!-- Universe List -->
        <div class="bb-card bb-card--form">
          <% if @universes.empty? %>
            <!-- Empty State -->
            <div class="bb-empty-state">
              <h3 class="bb-empty-state__title">No universes yet</h3>
              <p class="bb-empty-state__text">Create your first universe to get started</p>
            </div>
          <% else %>
            <div class="space-y-3">
              <% @universes.each do | universe | %>
                <%= link_to universe_path(universe), class: "block" do %>
                  <div class="bb-list-item">
                    <div class="flex items-center">
                      <div class="flex flex-col">
                        <span class="text-gray-900 font-medium"><%= universe.name %></span>
                        <span class="bb-subtitle-sm">
                          <%= pluralize(universe.characters.count, 'character') %> â€¢ <%= pluralize(universe.images.count, 'image') %>
                        </span>
                      </div>
                    </div>
                    <div class="flex items-center">
                      <div class="text-blue-600 p-2 rounded-full">
                        <span>â†’</span>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>

</section>
