<section class="image-list">

  <h4>Add New Image</h4>

    <%= form_with model: Image.new(universe_id: universe.id), url: universe_images_url(universe), method: "post" do | form | %>
      <div class="grid-container">
        <div class="grid-x grid-padding-x">
          <div class="medium-4 medium-offset-2 cell">
            <%= form.file_field :image_file, required: true %>
          </div>
          <div class="medium-3 medium-offset-1 cell">
            <%= form.submit "Add", class: "button" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid-x grid-padding-x grid-padding-y">
      <% if images.empty? %>
        <div class="small-12 cell">
          <%= render partial: "shared/empty_banner", locals: {
            message: "There are no images yet, create some!"
          } %>
        </div>
      <% else %>
        <% images.each do | image | %>
          <div class="small-6 medium-4 large-2 cell">
            <%= link_to edit_universe_image_url(universe, image) do %>
              <%= generate_image_tag(image, [250, nil]) %>
            <% end %>
          </div>
        <% end %>
        <%= will_paginate images %>
      <% end %>
    </div>

</section>
