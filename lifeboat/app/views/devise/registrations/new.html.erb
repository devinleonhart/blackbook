<div class="row">
  <div class="col-md-6 mx-auto">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "border border-dark border-2 rounded" }) do |f| %>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <div class="mb-3">
        <label class="form-label">
          Display Name
          <em>(How you'd like to be seen)</em>
        </label>
        <%= f.text_field :display_name, autofocus: true, autocomplete: "display name", class: 'form-control' %>
      </div>
      <div class="mb-3">
        <label class="form-label">
          Password
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </label>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>
      <button class="btn btn-primary" type="submit">Register</button>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 mx-auto">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
