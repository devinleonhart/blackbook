<section id="characters-new-view" class="section is-fullheight">

    <div class="container">
      <div class="columns is-centered">

        <div class="column is-5-tablet is-4-desktop is-3-widescreen">

          <%= form_with model: @new_character, url: universe_characters_url(universe_id: @new_character.universe_id) do |form| %>

            <div class="field">
              <%= form.label :name, class: "label" %>
              <div class="control has-icons-left">
                <span class="icon is-small is-left">
                    <%= fa_icon "user" %>
                </span>
                <%= form.text_field :name, class: 'input', placeholder: "Tangle", required: true %>
              </div>
            </div>

            <div class="field">
              <%= form.submit "Save", class: "button is-primary" %>
              <%= link_to "Cancel", universe_url(@new_character.universe_id), class: "button" %>
            </div>
          <% end %>

        </div>

      </div>
    </div>

</section>
